<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.iammaxim.luciddreaminghelper.SessionViewerActivity">

    <LinearLayout
        android:id="@+id/settings_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MinY / MaxY (-20/0/20)"
            android:textAlignment="center" />

        <SeekBar
            android:id="@+id/sb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="400"
            android:progress="100" />

        <SeekBar
            android:id="@+id/sb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="400"
            android:progress="300" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            app:srcCompat="@android:color/darker_gray" />

        <CheckBox
            android:id="@+id/cb7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Enable accelerometer part" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable graphs" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="#ff0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="#00ff00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="#0000ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="X" />

            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Y" />

            <CheckBox
                android:id="@+id/cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Z" />

        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_arrow_up_black_24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            app:srcCompat="@android:color/darker_gray" />

    </LinearLayout>

    <ImageView
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_arrow_down_black_24dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ru.iammaxim.luciddreaminghelper.TouchPassingLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accelerometer data"
                android:textAlignment="center" />

            <ru.iammaxim.luciddreaminghelper.TouchPassingFrameLayout
                android:id="@+id/accel_part"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ru.iammaxim.graphlib.LineGraph
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <ru.iammaxim.graphlib.LineGraph
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <ru.iammaxim.graphlib.LineGraph
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </ru.iammaxim.luciddreaminghelper.TouchPassingFrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                app:srcCompat="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Output"
                android:textAlignment="center" />

            <ru.iammaxim.luciddreaminghelper.TouchPassingLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ru.iammaxim.graphlib.LineGraph
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    app:srcCompat="@android:color/darker_gray" />

                <ru.iammaxim.graphlib.LineGraph
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </ru.iammaxim.luciddreaminghelper.TouchPassingLinearLayout>


        </ru.iammaxim.luciddreaminghelper.TouchPassingLinearLayout>

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>
